<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollProviderDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgProviderProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Profile picture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvProviderNameDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ABC Mechanical Garage"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/imgProviderProfile"
            app:layout_constraintStart_toEndOf="@id/imgProviderProfile"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvProviderTypeDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mechanical garage"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvProviderNameDetail"
            app:layout_constraintStart_toEndOf="@id/imgProviderProfile"
            app:layout_constraintEnd_toEndOf="parent" />

        <RatingBar
            android:id="@+id/ratingProviderDetail"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            app:layout_constraintTop_toBottomOf="@id/tvProviderTypeDetail"
            app:layout_constraintStart_toEndOf="@id/imgProviderProfile"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvProviderAddressDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Address: No. 10, Galle Road, Colombo"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/imgProviderProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvProviderPhoneDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tel: 077-1234567"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvProviderAddressDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvProviderDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Description: We provide full mechanical service for cars, vans and jeeps."
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvProviderPhoneDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvReviewsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Reviews"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvProviderDescription"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReviews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvReviewsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnAppointment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="APPOINTMENT"
            android:textAllCaps="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/rvReviews"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnReview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="REVIEW"
            android:textAllCaps="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnAppointment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
